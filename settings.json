{
  "permissions": {
    "allow": [
      "Bash",
      "Read",
      "Edit",
      "Write",
      "WebFetch",
      "WebSearch",
      "mcp__github__*",
      "mcp__slack__*",
      "mcp__linear__*",
      "mcp__asana__*",
      "mcp__notion__*",
      "mcp__craft__*",
      "mcp__ghost__*",
      "mcp__readwise__*",
      "mcp__composer__*"
    ],
    "ask": [],
    "deny": [
      "Read(.env*)",
      "Read(**/secrets*)",
      "Read(**/*credentials*)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Bash(rm -rf /:*)",
      "Bash(rm -rf ~:*)",
      "Bash(chmod -R 777 /:*)",
      "Bash(mkfs:*)",
      "Bash(dd if=:*)"
    ]
  }
}
